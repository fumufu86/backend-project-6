extends ../layouts/application.pug

block header
  = t('views.users.edit.edit')

block content 
  //- +formFor()(action=route('edit', { id: user.id }) method='post')
  //- +formFor()(action=route('update user', { id: user.id }) method='post')
  +formFor()(action=route('update user', { id: user.id }) method='post')
    +input(name='_method' type='hidden' value='patch')
    +input(user, 'firstName', t('views.users.new.labels.firstName'), errors)(type="text")
    +input(user, 'lastName', t('views.users.new.labels.lastName'), errors)(type="text")
    +input(user, 'email', t('views.users.new.labels.email'), errors)(type="text")
    +input(user, 'password', t('views.users.new.labels.password'), errors)(type="password")
    +submit(user)(value=t('views.users.edit.submit'))